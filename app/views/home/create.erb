            <div class="row" style="text-align: center">
                <span style="margin-right: 18px">차분</span>
                    <input type="radio" name="personality" value="1">
                    <input type="radio" name="personality" value="2">
                    <input type="radio" name="personality" value="3">
                    <input type="radio" name="personality" value="4">
                    <input type="radio" name="personality" value="5">
