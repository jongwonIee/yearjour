            </div>
        </nav>
    </div>
<!-- 저어어어러얼대로 헤더 건드리지말 것 -->

    <div id="content">
        <div class="col-md-6 col-md-offset-3 col-xs-12 col-xs-offset-0">
            
<!-- 방 제목 입력 창 --> 
          <div class="row">
              <input name="title" id="titleinput" type="text" placeholder="모임 이름을 작성해주세요.">
          </div>

    <br>
<!-- 필수항목 begin --> 
            <div class="row">
                <div id="sticker" class="sticker">필수항목</div>
            </div>
        </div>
        
        <div class="row"> 
            <div class="col-md-3 col-md-offset-3 col-xs-6 col-xs-offset-0">
                <i class="fa fa-map-marker fa-2x" aria-hidden="true"></i> 
                <input name="region" id="contentinput" placeholder="(도시,) 국가" />
            </div>
            
            <div class="col-md-3 col-xs-6">
                <i class="fa fa-map fa-2x" aria-hidden="true"></i> 
                <input name="place" id="contentinput" placeholder="구체적 장소"/>
            </div>
        </div>   
        
        <div class="row"> 
            <div class="col-md-3 col-md-offset-3 col-xs-6 col-xs-offset-0">
                <i class="fa fa-calendar fa-2x" aria-hidden="true"></i> 
                <input name="date" id="contentinput" placeholder="-월 -일" />
            </div>
            
            <div class="col-md-3 col-xs-6">
                <i class="fa fa-clock-o fa-2x" aria-hidden="true"></i> 
                <input name="time" id="contentinput" placeholder="-시" />
            </div>
        </div>
        
        <div class="row"> 
            <div class="col-md-3 col-md-offset-3 col-xs-6 col-xs-offset-0">
                <i class="fa fa-users fa-2x" aria-hidden="true"></i> 
                <input name="people" id="contentinput" placeholder="인원수" />
            </div>
        </div>  

        <div class="col-md-6 col-md-offset-3 col-xs-12 col-xs-offset-0">
            <div class="row" style="margin-top: 10px">
                <hr id="break">
            </div>
        </div>
<!-- 필수항목 입력들 end -->

<!-- 목적 checkbox begin -->

        <div class="row" style="text-align :center">
            <div class="col-md-4 col-xs-4">
              <input class="purposecheck" type="checkbox" name="food" data-labelauty="|" unchecked> 식사         
            </div>
            
            <div class="col-md-4 col-xs-4">
              <input class="purposecheck" type="checkbox" name="citytour" data-labelauty="|" unchecked> 시내동행      
            </div>
            
            <div class="col-md-4 col-xs-4">
              <input class="purposecheck" type="checkbox" name="suburbtour" data-labelauty="|" unchecked> 근교방문      
            </div>
        </div>
        
        <div class="row" style="text-align :center">
            <div class="col-md-4 col-xs-4">
              <input class="purposecheck" type="checkbox" name="guidetour" data-labelauty="|" unchecked> 가이드투어      
            </div>
        
            <div class="col-md-4 col-xs-4">
              <input class="purposecheck" type="checkbox" name="concert" data-labelauty="|" unchecked> 콘서트         
            </div>
            
            <div class="col-md-4 col-xs-4">
              <input class="purposecheck" type="checkbox" name="sports" data-labelauty="|" unchecked> 스포츠      
            </div>
        </div>

        <div class="row" style="text-align :center">
            <div class="col-md-4 col-xs-4">
              <input class="purposecheck" type="checkbox" name="gallery" data-labelauty="|" unchecked> 미술관      
            </div>

            <div class="col-md-4 col-xs-4">
              <input class="purposecheck" type="checkbox" name="museum" data-labelauty="|" unchecked> 박물관      
