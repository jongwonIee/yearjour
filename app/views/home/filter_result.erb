<head>
  
  <link type="text/css" rel="stylesheet" href="search_result.css"/>
  
</head>

<div class="container">


<!-- 저어어어러얼대로 헤더 건드리지말 것 -->
    <div class="row">
        <nav class="navbar navbar-fixed-top">
            <div class="col-md-6 col-md-offset-3 col-xs-12 col-xs-offset-0 text-center">
                <div id="header">
                    <a href="/home/search_result"><img id="hback" class="h" src="/assets/header/h_back.png" alt="header back"></a>
                    <img class="h" src="/assets/header/h_createresult.png" alt="header title">
                    <a href="/home/search"><img id="hright2" class="h" src="/assets/header/headerleft.png" alt="header search"></a>
                    <img id="hright" class="h" src="/assets/header/h_side.png" alt="header hamburger">
                </div>
            </div>
        </nav>
    </div>
<!-- 저어어어러얼대로 헤더 건드리지말 것 -->

    <div id="content">
    <% q = @posts[0] %>   
<!-- 검색 input 출력 begin EDITTTTTT LATERRRRRRRRRRR -->   
        <div class="col-md-6 col-md-offset-3 col-xs-12 col-xs-offset-0">
            <div class="row">           
                <h2 id="title"><%= q.region %></h2>
                <h4> <%= q.date %></h3>
            </div>
        </div>
<!-- 검색 input 출력 end --> 
        <div class="row">
            <div class="col-md-3 col-md-offset-3 col-xs-6 col-xs-offset-0" style="text-align: center">
                <br>
                <form action="/home/create"><button id="search_button">방 만들기</button>  </form>
            </div>

            <div class="col-md-3 col-xs-6" style="text-align: center">
                <br>
                <form action="/home/filter">
                    <input type="hidden" name="region" value="<%=@region%>">
                    <input type="hidden" name="date" value="<%=@date%>">
                    <input type="hidden" name="food" value=<%=@food%>>
                    <input type="hidden" name="citytour" value="<%=@citytour%>">
                    <button id="search_button">필터</button>
                </form>
            </div>
        </div>

        <div class="col-md-6 col-md-offset-3 col-xs-12 col-xs-offset-0">        
            <div class="row">
                <hr id="break5">
            </div>
        </div>

<!-- 제목 출력 begin -->   
<% @posts.each do |p| %>  
        <div class="row">
            <div class="col-md-1 col-md-offset-3 col-xs-3">
                <img src="/assets/groupcircle.png">
            </div>
            
            <div class="col-md-4 col-xs-7">
                <h4><a id="marvelapp" href="https://marvelapp.com/193f329#14053064"><%= p.title %></a></h4>
                
                <p>
                    <% if p.food == true %>
                        <%= "식사" %>
                    <% end %>
                    
                    <% if p.citytour == true %>
                        <%= "시내 투어" %>
                    <% end %>
                    
                    <% if p.suburbtour == true %>
                        <%= "근교 투어" %>
                    <% end %>
                    
                    <% if p.guidetour == true %>
                        <%= "가이드 투어" %>
                    <% end %>
                    
                    <% if p.concert == true %>
                        <%= "콘서트" %>
                    <% end %>
                    
                    <% if p.sports == true %>
                        <%= "스포츠" %>
                    <% end %>
                    
                    <% if p.gallery == true %>
                        <%= "갤러리" %>
                    <% end %>
                    
                    <% if p.museum == true %>
                        <%= "박물관" %>
                    <% end %>
                    
                    <% if p.historic == true %>
                        <%= "유적지" %>
                    <% end %>
                    
                    <% if p.room == true %>
                        <%= "룸 쉐어링" %>
                    <% end %>
                    
                    <% if p.car == true %>
                        <%= "카 쉐어링" %>
                    <% end %>
                   
                    <% if p.male == true %>
                      <%= "남성" %>
                    <% end %>
                    <% if p.female == true %>
                      <%= "여성" %>
                    <% end %></p>
                <p>참여인원 ( <%= p.people %> /<%= p.people %>)</p>
            </div>
            
            <div class="col-md-1 col-xs-2">
                <input class="starcheck" type="checkbox" name="gallery" data-labelauty="찜|찜"  unchecked>
                <i class="fa fa-map-marker" ></i>
            </div>
            
        </div> 

        <div class="col-md-6 col-md-offset-3 col-xs-12 col-xs-offset-0">        
            <div class="row">
                <hr id="break">
            </div>
        </div>
        <% end %>
        
    </div> <!-- content container close -->


<!-- ******************** FOOTER DO NOT TOUCH EXCEPT CHANGE COLOR  -->          
    <div class="row">
        <nav class="navbar navbar-dafult navbar-fixed-bottom">
            <div class="col-md-6 col-md-offset-3 col-xs-12 col-xs-offset-0 text-center">
                <div id="footer">
                    <img class="h" src="/assets/footer/fhome-g" alt="footer home grey">
                    <img class="h" src="/assets/footer/falarm-g" alt="footer alarm grey">
                    <img class="h" src="/assets/footer/fchat-g" alt="footer chat grey">
                    <img class="h" src="/assets/footer/fprofile-g" alt="footer profile grey">
                </div>
            </div>
        </nav>
    </div>
<!-- ******************** FOOTER DO NOT TOUCH EXCEPT CHANGE COLOR  -->    

</div> <!-- div class container close -->

<script>
    function goBack() {
        window.history.back();
    }
    
   //data label 
    $(document).ready(function(){
      $(".starcheck").labelauty();
    });
</script>