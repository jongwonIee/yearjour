<center>
    <div style="margin-top:5%">
        <a href='/home/create/'>방만들러 가기</a>
    </div>
</center>
<% @posts.each do |p| %>
    <div class="container well" style="margin-top: 5%">
        <div style="margin-top: 20px">
            <span style="font-weight: bold; font-size: 20px">#<%= p.id %></span><div style="float: right;"><%= p.created_at.in_time_zone("Asia/Seoul").strftime("%Y년%m월%d일 %H시%M분%S초") %> 
            <a href='/update_view/<%= p.id %>'>수정</a> <a href='/destroy/<%= p.id %>'>삭제</a></div>
            <p>제목: <%= p.title %></p>
            <p>소개: <%= p.content %></p>
            <p>장소: <%= p.place %></p>
            <p>날짜: <%= p.date %></p>
            
            <div>
            카테고리:
            <% if p.food == true %>
                <%= "식사" %>
            <% else %>
            <% end %>
            
            <% if p.citytour == true %>
                <%= "시내 투어" %>
            <% else %>
            <% end %>
            
            <% if p.suburbtour == true %>
                <%= "근교 투어" %>
            <% else %>
            <% end %>
            
            <% if p.guidetour == true %>
                <%= "가이드 투어" %>
            <% else %>
            <% end %>
            
            <% if p.concert == true %>
                <%= "콘서트" %>
            <% else %>
            <% end %>
            
            <% if p.sports == true %>
                <%= "스포츠" %>
            <% else %>
            <% end %>
            
            <% if p.gallery == true %>
                <%= "갤러리" %>
            <% else %>
            <% end %>
            
            <% if p.museum == true %>
                <%= "박물관" %>
            <% else %>
            <% end %>
            
            <% if p.historic == true %>
                <%= "유적지" %>
            <% else %>
            <% end %>
            
            <% if p.room == true %>
                <%= "룸 쉐어링" %>
            <% else %>
            <% end %>
            
            <% if p.car == true %>
                <%= "카 쉐어링" %>
            <% else %>
            <% end %>
            </div>
            
            <% p.replies.each do |r| %>
                <%= r.content %><div style="float: right;"><%= r.created_at.in_time_zone("Asia/Seoul").strftime("%Y년%m월%d일 %H시%M분%S초") %> 
                <a href='/reply_update_view/<%= r.id %>'>수정</a> <a href='/reply_destroy/<%= r.id %>'>삭제</a></div> <br>
            <% end %>
            <form action="/home/reply_write" method="POST">
               <div class="form-group">
                 <input type="hidden" value="<%= p.id %>" name="postid">
                 <label for="comment">댓글:</label>
                 <textarea name="comment" class="form-control" rows="2" id="comment"></textarea>
               </div>
              <button type="submit" class="btn btn-default">댓글 달기</button>
            </form>
  
        </div>
      </div>
<% end %>







